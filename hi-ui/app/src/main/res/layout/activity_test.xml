<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_hi_refresh"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:gravity="center"
                android:text="HiRefresh"
                android:background="#FF5722"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_hi_taptop"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:gravity="center"
                android:text="HiTapTop"
                android:background="#3F51B5"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_tab_bottom"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:gravity="center"
                android:text="HiTabBottom"
                android:background="#3A9321"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_hi_banner"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:gravity="center"
                android:text="HiBanner"
                android:background="#cc09cc"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>